<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#6C9EEA">

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del estudiante"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/etNota1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNombre"
        android:hint="Nota 1 (15%)"
        android:inputType="numberDecimal"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/etNota2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNota1"
        android:hint="Nota 2 (15%)"
        android:inputType="numberDecimal"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/etNota3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNota2"
        android:hint="Nota 3 (20%)"
        android:inputType="numberDecimal"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/etNota4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNota3"
        android:hint="Nota 4 (25%)"
        android:inputType="numberDecimal"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/etNota5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNota4"
        android:hint="Nota 5 (25%)"
        android:inputType="numberDecimal"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNota5"
        android:layout_marginTop="16dp"
        android:backgroundTint="#3F51B5"
        android:text="Calcular Promedio"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCalcular"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textColor="#000000" />

</RelativeLayout>